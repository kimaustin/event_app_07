<h1>Show User</h1>

<ul>

  <li>
    <strong>User Profile Picture:</strong>
    <img src="<%= Routes.user_path(@conn, :photo, @user) %>" alt="">
  </li>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.user_path(@conn, :edit, @user) %></span>
<span><%= link "Back", to: Routes.user_path(@conn, :index) %></span>
